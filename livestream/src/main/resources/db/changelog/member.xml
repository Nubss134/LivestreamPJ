<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create_table_member" author="ngocnd">
        <createTable tableName="member">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(500)"/>
            <column name="password" type="varchar(500)"/>
            <column name="nick_name" type="varchar(500)"/>
            <column name="role" type="int(1)"/>
            <column name="avatar" type="varchar(500)"/>
            <column name="birthday" type="TIMESTAMP"/>
            <column name="gender" type="boolean"/>
            <column name="phone" type="varchar(11)"/>
            <column name="email" type="varchar(200)"/>
            <column name="is_ban" type="boolean"/>

            <column name="created_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>